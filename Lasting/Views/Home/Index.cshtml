@model IEnumerable<Product>

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold text-gradient">Sản Phẩm Nổi Bật</h2>
        <p class="text-muted">Khám phá những sản phẩm được yêu thích nhất</p>
        <div class="d-flex justify-content-center">
            <div class="divider-gradient mx-auto"></div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="product-card">
                    @if (product.OldPrice.HasValue && product.OldPrice > product.Price)
                    {
                        <div class="sale-badge">Giảm giá</div>
                    }
                    <div class="product-image">
                        <img src="@product.ImageUrl" alt="@product.Name">
                    </div>
                    <div class="product-info">
                        <h3 class="product-title">@product.Name</h3>
                        <div class="product-price">
                            @if (product.OldPrice.HasValue && product.OldPrice > product.Price)
                            {
                                <span class="old-price">@product.OldPrice.Value.ToString("N0") đ</span>
                                <span class="discount-badge">-@((int)(100 - (product.Price * 100 / product.OldPrice.Value)))%</span>
                            }
                            <span class="current-price">@product.Price.ToString("N0") đ</span>
                        </div>
                        <div class="product-actions">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"
                               class="btn btn-view-details">
                                <i class="bi bi-eye me-1"></i> Xem chi tiết
                            </a>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-add-to-cart">
                                        <i class="bi bi-cart-plus me-1"></i> Thêm giỏ
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-add-to-cart">
                                    <i class="bi bi-cart-plus me-1"></i> Thêm giỏ
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .text-gradient {
        background: linear-gradient(90deg, #f04c2f, #ff6b35);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .divider-gradient {
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, #f04c2f, #ff6b35);
        border-radius: 2px;
    }

    .product-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        height: 100%;
        position: relative;
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.1);
        }

    .sale-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        background: linear-gradient(135deg, #ff9d6c, #ff4e50);
        color: white;
        font-weight: 600;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        z-index: 2;
        box-shadow: 0 4px 10px rgba(255, 78, 80, 0.25);
    }

    .product-image {
        height: 220px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f9f9f9;
        padding: 20px;
    }

        .product-image img {
            max-height: 100%;
            max-width: 100%;
            transition: transform 0.5s ease;
        }

    .product-card:hover .product-image img {
        transform: scale(1.05);
    }

    .product-info {
        padding: 20px;
    }

    .product-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 10px;
        color: #2d3748;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 50px;
    }

    .product-price {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 8px;
        margin-bottom: 15px;
    }

    .current-price {
        color: #f04c2f;
        font-weight: 700;
        font-size: 1.2rem;
    }

    .old-price {
        text-decoration: line-through;
        color: #a0aec0;
        font-size: 0.9rem;
    }

    .discount-badge {
        background: #fffaf0;
        color: #dd6b20;
        font-weight: 600;
        padding: 3px 8px;
        border-radius: 20px;
        border: 1px solid #fed7aa;
        font-size: 0.8rem;
    }

    .product-actions {
        display: flex;
        gap: 10px;
    }

    .btn-view-details {
        flex: 1;
        background: rgba(240, 76, 47, 0.1);
        color: #f04c2f;
        border: none;
        padding: 8px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-view-details:hover {
            background: #f04c2f;
            color: white;
        }

    .btn-add-to-cart {
        flex: 1;
        background: #2d3748;
        color: white;
        border: none;
        padding: 8px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-add-to-cart:hover {
            background: #1a202c;
            transform: translateY(-2px);
        }
</style>