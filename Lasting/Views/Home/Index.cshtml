@model IEnumerable<Product>

<div class="container">
    <h2>Sản phẩm nổi bật</h2>
    <div class="row">
        @foreach (var product in Model)
        {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <div class="mb-2">
                                <span class="text-danger fw-bold">@product.Price.ToString("N0") đ</span>
                            @if (product.OldPrice.HasValue)
                            {
                                        <span class="text-muted ms-2"><del>@product.OldPrice.Value.ToString("N0") đ</del></span>
                            }
                            </div>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </a>

                                @if (User.Identity.IsAuthenticated)
                                {
                                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="ms-2">
                                                <input type="hidden" name="productId" value="@product.Id" />
                                                <input type="hidden" name="quantity" value="1" />
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                                                </button>
                                            </form>
                                }
                                else
                                {
                                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-success btn-sm">
                                                <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                                            </a>
                                }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>