@if (ViewBag.RelatedProducts != null && ViewBag.RelatedProducts.Count > 0)
{
        <div class="container mt-5">
            <h3>Sản phẩm liên quan</h3>
            <div class="row">
            @foreach (var product in ViewBag.RelatedProducts)
            {
                        <div class="col-md-3 mb-4">
                            <div class="card h-100">
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 150px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">
                                        <span class="text-danger fw-bold">@product.Price.ToString("N0") đ</span>
                                    </p>
                                    <a href="@Url.Action("ProductDetails", "Home", new { id = product.Id })" 
                                       class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                                </div>
                            </div>
                        </div>
            }
            </div>
        </div>
}