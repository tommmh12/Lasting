@model IEnumerable<Lasting.Models.Order>
@using Lasting.Models

@{
    ViewData["Title"] = "Lịch sử đơn hàng";

    string GetStatusBadgeClass(OrderStatus status) => status switch
    {
        OrderStatus.Pending => "bg-warning text-dark",     // Chờ xác nhận
        OrderStatus.Processing => "bg-primary",             // Đang xử lý
        OrderStatus.Shipped => "bg-info text-dark",         // Đang giao
        OrderStatus.Delivered => "bg-success",              // Đã giao
        OrderStatus.Cancelled => "bg-danger",               // Đã hủy
        _ => "bg-secondary"
    };
}

<div class="container my-5">
    <h2 class="mb-4 text-center">🛍 Lịch sử mua hàng của bạn</h2>

    @if (!Model.Any())
    {
            <div class="alert alert-info text-center">
                Bạn chưa có đơn hàng nào.
            </div>
    }
    else
    {
            <table class="table table-hover shadow-sm border">
                <thead class="table-light">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Ngày đặt</th>
                        <th>Trạng thái</th>
                        <th>Tổng tiền</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var order in Model)
                {
                            <tr>
                                <td>#@order.Id</td>
                                <td>@order.OrderDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(order.Status)">
                                @order.Status
                                    </span>
                                </td>
                                <td>@order.TotalAmount.ToString("N0") đ</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm">
                                        Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                }
                </tbody>
            </table>
    }
</div>
