@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - OTI Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        /* Navbar */
        .nav-link {
            position: relative;
            transition: color 0.3s;
        }

            .nav-link::after {
                content: '';
                position: absolute;
                width: 0%;
                height: 2px;
                bottom: 0;
                left: 0;
                background-color: #f04c2f;
                transition: width 0.3s ease-in-out;
            }

            .nav-link:hover {
                color: #f04c2f !important;
            }

                .nav-link:hover::after {
                    width: 100%;
                }

        /* Search */
        .search-box {
            background-color: #f2f2f2;
            border-radius: 20px;
            padding: 5px 12px;
            display: flex;
            align-items: center;
            transition: box-shadow 0.3s;
        }

            .search-box:focus-within {
                box-shadow: 0 0 6px rgba(240, 76, 47, 0.4);
            }

        .search-input {
            border: none;
            background: transparent;
            outline: none;
            font-size: 0.9rem;
            width: 150px;
            transition: width 0.3s ease;
        }

            .search-input:focus {
                width: 200px;
            }

        .bi {
            transition: transform 0.2s ease;
        }

            .bi:hover {
                transform: scale(1.2);
            }

        .btn-dark:hover {
            background: linear-gradient(90deg, #111, #f04c2f);
            border-color: #f04c2f;
            color: white;
        }

        footer {
            background-color: #f8f8f8;
            padding: 40px 0;
            margin-top: 60px;
            color: #555;
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg bg-white sticky-top shadow-sm py-3">
        <div class="container">
            <!-- LOGO -->
            <a class="navbar-brand fw-bold fs-4 text-dark" asp-controller="Home" asp-action="Index">
                <img src="~/images/products/logo-black.png" alt="OTI" style="height: 30px;" />
            </a>

            <!-- TOGGLER -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#otiNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- NAV CONTENT -->
            <div class="collapse navbar-collapse" id="otiNavbar">
                <!-- CENTER MENU -->
                <ul class="navbar-nav mx-auto gap-3">
                    <li class="nav-item"><a class="nav-link fw-semibold" asp-controller="Product" asp-action="NewProducts">Mới về</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="MaleProducts">Nam</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="FemaleProducts">Nữ</a></li>
                    <li class="nav-item"><a class="nav-link text-danger" href="#">Giảm giá</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Orders" asp-action="MyOrders">Đơn hàng</a></li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index">Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cart" asp-action="Index">Giỏ hàng</a>
                    </li>
                </ul>

                <!-- ICONS + SEARCH + USER -->
                <div class="d-flex align-items-center gap-3">
                    <form asp-controller="Product" asp-action="Index" method="get" class="search-box d-none d-lg-flex">
                        <i class="bi bi-search ms-2"></i>
                        <input type="text" name="search" class="search-input" placeholder="Tìm giày..." />
                    </form>

                    <a href="#"><i class="bi bi-heart fs-5 text-dark" title="Yêu thích"></i></a>
                    <a asp-controller="Cart" asp-action="Index"><i class="bi bi-bag fs-5 text-dark" title="Giỏ hàng"></i></a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">

                            <a class="text-dark text-decoration-none dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle fs-5"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage">Tài khoản</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Orders" asp-action="MyOrders">Đơn hàng của tôi</a>
                                </li>
                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item">Đăng xuất</button>
										</form>

                            <a href="#" class="text-dark text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle fs-5"></i>
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                        <i class="bi bi-person me-2"></i>Thông tin cá nhân
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="ChangePassword">
                                        <i class="bi bi-key me-2"></i>Đổi mật khẩu
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                        </button>

                                    </form>
                                </li>
                            </ul>
                        </div>
                    }

                    else
                    {
                        <a class="text-dark text-decoration-none" asp-area="Identity" asp-page="/Account/Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-dark btn-sm me-1">Tham gia</a>
                    }
                </div>
            </div>
        </div>
    </nav>
 
    <!-- MAIN CONTENT -->
    <main class="container mt-4">
        @RenderBody()
    </main>



    <!-- FOOTER -->
    <footer class="text-center">
        <div class="container">
            <p>&copy; @DateTime.Now.Year OTI Sneaker Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
