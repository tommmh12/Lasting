@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - OTI Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary: #f04c2f;
            --primary-dark: #d14028;
            --secondary: #2d3748;
            --light: #f8f9fa;
            --dark: #212529;
            --gray: #6c757d;
            --light-gray: #e9ecef;
            --transition: all 0.3s ease;
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.1);
            --shadow-md: 0 4px 12px rgba(0,0,0,0.15);
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #fafafa;
            color: var(--dark);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* ========== NAVBAR ========== */
        .navbar {
            background: white;
            box-shadow: var(--shadow-sm);
            padding: 0.8rem 0;
            transition: var(--transition);
        }

        .navbar-brand img {
            height: 32px;
            transition: transform 0.3s ease;
        }

        .navbar-brand:hover img {
            transform: scale(1.05);
        }

        .nav-item {
            margin: 0 0.25rem;
        }

        .nav-link {
            position: relative;
            color: var(--dark) !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 50px;
            transition: var(--transition);
        }

        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 3px;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            background-color: var(--primary);
            transition: var(--transition);
            border-radius: 3px;
        }

        .nav-link:hover,
        .nav-link.active {
            color: var(--primary) !important;
        }

        .nav-link:hover::after,
        .nav-link.active::after {
            width: 70%;
        }

        .nav-link.sale {
            background: linear-gradient(135deg, #ff9d6c, #ff4e50);
            color: white !important;
            font-weight: 600;
            padding: 0.5rem 1.2rem !important;
            box-shadow: 0 4px 10px rgba(255, 78, 80, 0.25);
        }

        .nav-link.sale:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(255, 78, 80, 0.35);
        }

        /* Search box */
        .search-box {
            background-color: var(--light-gray);
            border-radius: 50px;
            padding: 0.5rem 1rem;
            transition: var(--transition);
            max-width: 280px;
        }

        .search-box:focus-within {
            box-shadow: 0 0 0 3px rgba(240, 76, 47, 0.2);
            background-color: white;
        }

        .search-input {
            border: none;
            background: transparent;
            outline: none;
            font-size: 0.95rem;
            width: 140px;
            transition: width 0.3s ease;
        }

        .search-input:focus {
            width: 200px;
        }

        .search-icon {
            color: var(--gray);
            transition: var(--transition);
        }

        .search-box:focus-within .search-icon {
            color: var(--primary);
        }

        /* Action icons */
        .action-icon {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            color: var(--dark);
            transition: var(--transition);
        }

        .action-icon:hover {
            background-color: rgba(240, 76, 47, 0.1);
            color: var(--primary);
            transform: translateY(-2px);
        }

        .cart-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: var(--primary);
            color: white;
            font-size: 0.65rem;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* User dropdown */
        .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid transparent;
            transition: var(--transition);
        }

        .dropdown:hover .user-avatar {
            border-color: var(--primary);
        }

        .dropdown-menu {
            border: none;
            box-shadow: var(--shadow-md);
            border-radius: 10px;
            padding: 0.5rem;
            margin-top: 0.5rem;
        }

        .dropdown-item {
            border-radius: 6px;
            padding: 0.5rem 1rem;
            font-weight: 500;
            transition: var(--transition);
            display: flex;
            align-items: center;
        }

        .dropdown-item i {
            width: 24px;
            margin-right: 0.75rem;
            color: var(--gray);
        }

        .dropdown-item:hover {
            background-color: rgba(240, 76, 47, 0.08);
            color: var(--primary);
        }

        .dropdown-item:hover i {
            color: var(--primary);
        }

        .dropdown-divider {
            margin: 0.25rem 0;
        }

        /* Main content */
        main {
            flex: 1;
            padding-top: 2rem;
            padding-bottom: 3rem;
        }

        /* ========== FOOTER ========== */
        footer {
            background: linear-gradient(to right, #2d3748, #1a202c);
            color: white;
            padding: 3rem 0 1.5rem;
            margin-top: auto;
        }

        .footer-title {
            position: relative;
            font-weight: 600;
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
        }

        .footer-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: var(--primary);
            border-radius: 3px;
        }

        .footer-links a {
            display: block;
            color: #a0aec0;
            padding: 0.3rem 0;
            transition: var(--transition);
            text-decoration: none;
        }

        .footer-links a:hover {
            color: white;
            transform: translateX(5px);
        }

        .social-links {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .social-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 38px;
            height: 38px;
            border-radius: 50%;
            background: rgba(255,255,255,0.1);
            color: white;
            transition: var(--transition);
        }

        .social-icon:hover {
            background: var(--primary);
            transform: translateY(-3px);
        }

        .copyright {
            border-top: 1px solid rgba(255,255,255,0.1);
            padding-top: 1.5rem;
            margin-top: 2rem;
            text-align: center;
            color: #a0aec0;
            font-size: 0.9rem;
        }

        /* ========== RESPONSIVE ========== */

    </style>
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container">
            <!-- LOGO -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/images/products/logo-black.png" alt="OTI" />
            </a>

            <!-- TOGGLER -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#otiNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- NAV CONTENT -->
            <div class="collapse navbar-collapse" id="otiNavbar">
                <!-- CENTER MENU -->
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="NewProducts">Mới về</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="MaleProducts">Nam</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="FemaleProducts">Nữ</a></li>
                    <li class="nav-item"><a class="nav-link sale" href="#">Giảm giá</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Orders" asp-action="MyOrders">Đơn hàng</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
                </ul>

                <!-- RIGHT SECTION -->
                <div class="d-flex align-items-center gap-2">
                    <!-- SEARCH -->
                    <form asp-controller="Product" asp-action="Index" method="get" class="search-box me-2">
                        <i class="bi bi-search search-icon me-2"></i>
                        <input type="text" name="search" class="search-input" placeholder="Tìm giày..." />
                    </form>
                    
                    <!-- WISHLIST -->
                    <a href="#" class="action-icon position-relative">
                        <i class="bi bi-heart fs-5"></i>
                    </a>
                    
                    <!-- CART -->
                    <a asp-controller="Cart" asp-action="Index" class="action-icon position-relative me-2">
                        <i class="bi bi-bag fs-5"></i>
                        <span class="cart-badge">3</span>
                    </a>
                    
                    <!-- USER SECTION -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown">
                                <img src="https://ui-avatars.com/api/?name=@User.Identity.Name&background=f04c2f&color=fff" class="user-avatar">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                        <i class="bi bi-person me-2"></i>Thông tin cá nhân
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="ChangePassword">
                                        <i class="bi bi-key me-2"></i>Đổi mật khẩu
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Orders" asp-action="MyOrders">
                                        <i class="bi bi-receipt me-2"></i>Đơn hàng của tôi
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex gap-2">
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-dark btn-sm">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập
                            </a>
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-dark btn-sm">
                                Tham gia
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>
 
    <!-- MAIN CONTENT -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <div class="row g-4">
                <!-- ABOUT -->
                <div class="col-md-3">
                    <h5 class="footer-title">Về OTI Store</h5>
                    <p class="text-light mb-4">
                        Chuyên cung cấp giày thể thao chính hãng với chất lượng hàng đầu và dịch vụ khách hàng tận tâm.
                    </p>
                    <div class="social-links">
                        <a href="#" class="social-icon"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="social-icon"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="bi bi-youtube"></i></a>
                        <a href="#" class="social-icon"><i class="bi bi-tiktok"></i></a>
                    </div>
                </div>
                
                <!-- CUSTOMER SERVICE -->
                <div class="col-md-3">
                    <h5 class="footer-title">Hỗ trợ khách hàng</h5>
                    <div class="footer-links">
                        <a href="#">Câu hỏi thường gặp</a>
                        <a href="#">Hướng dẫn chọn size</a>
                        <a href="#">Chính sách đổi trả</a>
                        <a href="#">Chính sách bảo mật</a>
                        <a href="#">Hướng dẫn mua hàng</a>
                    </div>
                </div>
                
                <!-- CONTACT -->
                <div class="col-md-3">
                    <h5 class="footer-title">Liên hệ</h5>
                    <ul class="list-unstyled text-light">
                        <li class="mb-2"><i class="bi bi-geo-alt me-2"></i> 123 Nguyễn Văn Linh, Q.7, TP.HCM</li>
                        <li class="mb-2"><i class="bi bi-telephone me-2"></i> (028) 1234 5678</li>
                        <li class="mb-2"><i class="bi bi-envelope me-2"></i> support@otistore.com</li>
                        <li><i class="bi bi-clock me-2"></i> 9:00 - 21:00 (T2 - CN)</li>
                    </ul>
                </div>
                
                <!-- NEWSLETTER -->
                <div class="col-md-3">
                    <h5 class="footer-title">Đăng ký nhận tin</h5>
                    <p class="text-light mb-3">Nhận thông tin khuyến mãi và sản phẩm mới nhất từ OTI</p>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="Email của bạn">
                        <button class="btn btn-primary" type="button">
                            <i class="bi bi-send"></i>
                        </button>
                    </div>
                    <img src="~/images/payment-methods.png" alt="Payment Methods" class="img-fluid mt-2">
                </div>
            </div>
            
            <div class="copyright">
                &copy; @DateTime.Now.Year OTI Sneaker Store. Tất cả quyền được bảo lưu.
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 20) {
                navbar.classList.add('shadow');
                navbar.style.padding = '0.5rem 0';
            } else {
                navbar.classList.remove('shadow');
                navbar.style.padding = '0.8rem 0';
            }
        });

        // Set active nav link
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            document.querySelectorAll('.nav-link').forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>