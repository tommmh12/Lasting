@model Lasting.Models.Order

@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<style>
    .success-container {
        max-width: 600px;
        margin: 60px auto;
        text-align: center;
    }
    .success-container .icon-circle {
        background: #28a745;
        color: #fff;
        width: 100px;
        height: 100px;
        font-size: 50px;
        border-radius: 50%;
        line-height: 100px;
        margin: 0 auto 20px;
    }
</style>

<div class="success-container">
    <div class="icon-circle mx-auto mb-3">
        ✔️
    </div>
    <h1 class="mb-3">Cảm ơn bạn đã đặt hàng!</h1>
    <p class="lead">
        Mã đơn hàng của bạn: <strong>#@Model.Id</strong><br />
        Tổng cộng: <strong>@Model.TotalAmount.ToString("N0") đ</strong>
    </p>

    <div class="mt-4">
        <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-lg me-2">Xem chi tiết đơn</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Quay về trang chủ</a>
    </div>
</div>
