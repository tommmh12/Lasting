@model Lasting.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Thanh Toán";
}

<div class="container py-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row">
        <!-- Thông tin giao hàng -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Thông tin giao hàng</h4>
                </div>
                <div class="card-body">
                    <form asp-action="PlaceOrder" method="post">
                        @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    <h5>Vui lòng sửa các lỗi sau:</h5>
                                    <ul>
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
    }
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="ShippingAddress.FullName" class="form-label">Họ và tên</label>
                            <input asp-for="ShippingAddress.FullName" class="form-control" required>
                            <span asp-validation-for="ShippingAddress.FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ShippingAddress.AddressLine1" class="form-label">Địa chỉ</label>
                            <input asp-for="ShippingAddress.AddressLine1" class="form-control" required>
                            <span asp-validation-for="ShippingAddress.AddressLine1" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ShippingAddress.City" class="form-label">Thành phố</label>
                                    <input asp-for="ShippingAddress.City" class="form-control" required>
                                    <span asp-validation-for="ShippingAddress.City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ShippingAddress.PhoneNumber" class="form-label">Số điện thoại</label>
                                    <input asp-for="ShippingAddress.PhoneNumber" class="form-control" required>
                                    <span asp-validation-for="ShippingAddress.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100 mt-3">
                            <i class="bi bi-check-circle"></i> Hoàn tất đơn hàng
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tóm tắt đơn hàng -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Đơn hàng của bạn</h4>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.CartItems)
                    {
                            <div class="d-flex justify-content-between mb-2">
                                <div>
                                    <span>@item.Product.Name</span>
                                    <small class="text-muted d-block">x @item.Quantity</small>
                                </div>
                                <span>@((item.Product.Price * item.Quantity).ToString("N0"))₫</span>
                            </div>
                    }

                    <hr>

                    <div class="d-flex justify-content-between fw-bold fs-5">
                        <span>Tổng cộng:</span>
                        <span class="text-danger">@Model.TotalAmount.ToString("N0")₫</span>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-arrow-left"></i> Quay lại giỏ hàng
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}