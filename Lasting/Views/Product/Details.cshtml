@model Lasting.Models.Product
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@{
    var reviewCount = Model.Reviews?.Count ?? 0;

    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="/products">Sản phẩm</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <!-- Product Info -->
    <div class="row g-4 mb-5">
        <!-- Product Images -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm mb-3">
                <img src="@Model.ImageUrl" class="card-img-top p-3" alt="@Model.Name" id="mainProductImage" style="height: 400px; object-fit: contain;">
            </div>

            @if (Model.Gallery != null && Model.Gallery.Any())
            {
                    <div class="d-flex flex-wrap gap-2">
                        <div class="thumbnail" onclick="changeMainImage('@Model.ImageUrl')">
                            <img src="@Model.ImageUrl" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover; cursor: pointer;">
                        </div>
                    @foreach (var img in Model.Gallery)
                    {
                                <div class="thumbnail" onclick="changeMainImage('@img.ImageUrl')">
                                    <img src="@img.ImageUrl" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover; cursor: pointer;">
                                </div>
                    }
                    </div>
            }
        </div>

        <!-- Product Details -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h1 class="h2 fw-bold mb-3">@Model.Name</h1>

                    <div class="d-flex align-items-center mb-3">
                        <div class="text-warning me-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                    <i class="bi @(i <= ViewBag.AverageRating ? "bi-star-fill" : "bi-star")"></i>
                            }
                        </div>
                        <span class="text-muted">(@reviewCount đánh giá)</span>

                    </div>

                    <div class="mb-4">
                        @if (Model.OldPrice.HasValue && Model.OldPrice > Model.Price)
                        {
                                <span class="text-decoration-line-through text-muted me-2">@Model.OldPrice.Value.ToString("N0") đ</span>
                                <span class="text-danger fw-bold fs-4">@Model.Price.ToString("N0") đ</span>
                                <span class="badge bg-danger ms-2">-@((int)(100 - (Model.Price * 100 / Model.OldPrice.Value)))%</span>
                        }
                        else
                        {
                                <span class="text-primary fw-bold fs-4">@Model.Price.ToString("N0") đ</span>
                        }
                    </div>

                    <div class="mb-4">
                        <p class="mb-2"><i class="bi bi-box-seam me-2"></i> <strong>Tình trạng:</strong> 
                            <span class="@(Model.StockQuantity > 0 ? "text-success" : "text-danger")">
                                @(Model.StockQuantity > 0 ? "Còn hàng" : "Hết hàng")
                            </span>
                        </p>
                        <p class="mb-2"><i class="bi bi-tags me-2"></i> <strong>Danh mục:</strong> @ViewBag.CategoryName</p>
                        <p class="mb-2"><i class="bi bi-building me-2"></i> <strong>Thương hiệu:</strong> @ViewBag.BrandName</p>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-bold">Mô tả sản phẩm</h5>
                        <p>@Model.Description</p>
                    </div>

                    <div class="border-top pt-3">
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" asp-route-productId="@Model.Id" class="row g-3 align-items-center">
                            <div class="col-auto">
                                <label class="form-label"><strong>Số lượng:</strong></label>
                            </div>
                            <div class="col-auto">
                                <div class="input-group" style="width: 120px;">
                                    <button type="button" class="btn btn-outline-secondary" onclick="decreaseQuantity()">-</button>
                                    <input type="number" name="quantity" value="1" min="1" max="@Model.StockQuantity" 
                                           class="form-control text-center" id="quantityInput">
                                    <button type="button" class="btn btn-outline-secondary" onclick="increaseQuantity()">+</button>
                                </div>
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary btn-lg" @(Model.StockQuantity <= 0 ? "disabled" : "")>
                                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Tabs -->
    <div class="row mb-5">
        <div class="col-12">
            <ul class="nav nav-tabs" id="productTabs" role="tablist">
                <li class="nav-item" role="presentation">
                <button class="nav-link active" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab">
                    Đánh giá (@reviewCount)
                </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab">Thông tin chi tiết</button>
                </li>
            </ul>

            <div class="tab-content p-3 border border-top-0 rounded-bottom shadow-sm bg-white">
                <!-- Reviews Tab -->
                <div class="tab-pane fade show active" id="reviews" role="tabpanel">
                    <div class="row">
                        <div class="col-md-5 mb-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <h3 class="display-4 fw-bold text-primary mb-0">@ViewBag.AverageRating.ToString("0.0")</h3>
                                    <div class="text-warning mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                                <i class="bi @(i <= ViewBag.AverageRating ? "bi-star-fill" : "bi-star")"></i>
                                        }
                                    </div>
                                    <p class="text-muted">Dựa trên @Model.Reviews?.Count đánh giá</p>

                                    <div class="mt-4">
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#reviewModal">
                                                    <i class="bi bi-pencil-square"></i> Viết đánh giá
                                                </button>
                                        }
                                        else
                                        {
                                                <div class="alert alert-info mb-0">
                                                    <a asp-area="Identity" asp-page="/Account/Login" class="alert-link">Đăng nhập</a> để viết đánh giá
                                                </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-7">
                            @if (Model.Reviews != null && Model.Reviews.Any())
                            {
                                foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAt))
                                {
                                            <div class="card mb-3 border-0 shadow-sm">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between mb-2">
                                                        <div>
                                                            <h6 class="mb-0 fw-bold">@review.User?.UserName</h6>
                                                            <small class="text-muted">@review.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                                                        </div>
                                                        <div class="text-warning">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                                    <i class="bi @(i <= review.Rating ? "bi-star-fill" : "bi-star")"></i>
                                                    }
                                                        </div>
                                                    </div>

                                                    <p class="mb-2">@review.Content</p>

                                            @if (review.Images?.Any() == true)
                                            {
                                                            <div class="d-flex flex-wrap gap-2 mb-2">
                                                    @foreach (var img in review.Images)
                                                    {
                                                                        <img src="@img.ImageUrl" class="img-thumbnail" style="width: 80px; height: 80px; cursor: pointer;" 
                                                                             onclick="openImageModal('@img.ImageUrl')">
                                                    }
                                                            </div>
                                            }

                                            @if (review.Replies?.Any() == true)
                                            {
                                                            <div class="bg-light p-3 rounded mt-2">
                                                    @foreach (var reply in review.Replies.OrderBy(r => r.CreatedAt))
                                                    {
                                                                        <div class="mb-2">
                                                                            <div class="d-flex justify-content-between">
                                                                                <strong>Quản trị viên</strong>
                                                                                <small class="text-muted">@reply.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                                                                            </div>
                                                                            <p class="mb-0">@reply.Content</p>
                                                                        </div>
                                                    }
                                                            </div>
                                            }

                                            @if (User.IsInRole("Admin"))
                                            {
                                                            <div class="mt-3">
                                                                <form asp-action="ReplyReview" method="post" class="mb-2">
                                                                    <input type="hidden" name="reviewId" value="@review.Id" />
                                                                    <div class="input-group">
                                                                        <input type="text" name="replyContent" class="form-control" placeholder="Viết phản hồi..." required>
                                                                        <button type="submit" class="btn btn-outline-primary">Gửi</button>
                                                                    </div>
                                                                </form>

                                                                <form asp-action="DeleteReview" method="post" class="d-inline">
                                                                    <input type="hidden" name="reviewId" value="@review.Id" />
                                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                                            onclick="return confirm('Bạn có chắc muốn xóa đánh giá này?');">
                                                                        <i class="bi bi-trash"></i> Xóa
                                                                    </button>
                                                                </form>
                                                            </div>
                                            }
                                                </div>
                                            </div>
                                }
                            }
                            else
                            {
                                    <div class="text-center py-4">
                                        <i class="bi bi-chat-square-text fs-1 text-muted"></i>
                                        <p class="text-muted mt-2">Chưa có đánh giá nào</p>
                                    </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Description Tab -->
                <div class="tab-pane fade" id="description" role="tabpanel">
                    <h4 class="fw-bold mb-3">Thông tin chi tiết</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-striped">
                                <tr>
                                    <th width="40%">Tên sản phẩm</th>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <th>Danh mục</th>
                                    <td>@ViewBag.CategoryName</td>
                                </tr>
                                <tr>
                                    <th>Thương hiệu</th>
                                    <td>@ViewBag.BrandName</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-striped">
                                <tr>
                                    <th width="40%">Giá</th>
                                    <td>@Model.Price.ToString("N0") đ</td>
                                </tr>
                                <tr>
                                    <th>Tình trạng</th>
                                    <td>
                                        <span class="badge @(Model.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                            @(Model.StockQuantity > 0 ? "Còn hàng" : "Hết hàng")
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Số lượng tồn</th>
                                    <td>@Model.StockQuantity</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h5 class="fw-bold">Mô tả sản phẩm</h5>
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Review Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reviewModalLabel">Viết đánh giá</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="AddReview" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" name="productId" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label">Đánh giá của bạn</label>
                        <div class="rating-stars">
                            @for (int i = 1; i <= 5; i++)
                            {
                                    <i class="bi bi-star-fill star" data-value="@i" style="cursor: pointer; font-size: 1.5rem;"></i>
                            }
                            <input type="hidden" name="Rating" id="ratingValue" value="5" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Nội dung đánh giá</label>
                        <textarea name="Content" class="form-control" rows="4" placeholder="Viết cảm nhận của bạn..." required></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ảnh minh họa (tối đa 3 ảnh)</label>
                        <input type="file" name="Images" multiple class="form-control" accept="image/*" max="3">
                        <div class="form-text">Bạn có thể tải lên tối đa 3 ảnh</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img src="" id="modalImage" class="img-fluid" style="max-height: 80vh;">
            </div>
        </div>
    </div>
</div>

@section Scripts {
        

        <script>
            // Đổi ảnh chính khi click thumbnail
            function changeMainImage(src) {
                document.getElementById('mainProductImage').src = src;
            }

            // Mở ảnh lớn trong modal
            function openImageModal(src) {
                document.getElementById('modalImage').src = src;
                new bootstrap.Modal(document.getElementById('imageModal')).show();
            }

            // Tăng/giảm số lượng sản phẩm
            function increaseQuantity() {
                const input = document.getElementById('quantityInput');
                const max = parseInt(input.max);
                if (parseInt(input.value) < max) input.value = parseInt(input.value) + 1;
            }

            function decreaseQuantity() {
                const input = document.getElementById('quantityInput');
                if (parseInt(input.value) > 1) input.value = parseInt(input.value) - 1;
            }

            // Chọn sao đánh giá
            document.addEventListener("DOMContentLoaded", function () {
                const stars = document.querySelectorAll('.star');
                const ratingInput = document.getElementById('ratingValue');
                const defaultRating = parseInt(ratingInput.value || "5");

                // Khởi tạo sao mặc định
                stars.forEach(star => {
                    const val = parseInt(star.getAttribute('data-value'));
                    if (val <= defaultRating) {
                        star.classList.add('text-warning');
                    }
                });

                // Gán sự kiện click
                stars.forEach(star => {
                    star.addEventListener('click', function () {
                        const value = this.getAttribute('data-value');
                        ratingInput.value = value;

                        stars.forEach(s => {
                            const v = s.getAttribute('data-value');
                            if (v <= value) {
                                s.classList.add('text-warning');
                            } else {
                                s.classList.remove('text-warning');
                            }
                        });
                    });
                });

                // Giới hạn số ảnh upload trong modal review
                const imageInput = document.querySelector('input[name="Images"]');
                if (imageInput) {
                    imageInput.addEventListener('change', function () {
                        if (this.files.length > 3) {
                            alert("Chỉ được chọn tối đa 3 ảnh.");
                            this.value = "";
                        }
                    });
                }
            });
        </script>

        <style>
            .thumbnail img:hover {
                border-color: #0d6efd !important;
            }

            .star {
                color: #dee2e6;
            }

            .star.text-warning {
                color: #ffc107 !important;
            }

            .nav-tabs .nav-link {
                font-weight: 500;
            }

            .rating-stars .star {
                margin-right: 5px;
            }
        </style>
}
