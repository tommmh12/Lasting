@model IEnumerable<Lasting.Models.Product>

@{
    ViewData["Title"] = "Sản phẩm";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Bộ sưu tập giày</h1>
        <p class="text-muted">Khám phá những mẫu giày mới nhất và chất lượng nhất</p>
        <div class="d-flex justify-content-center">
            <div class="divider mx-auto"></div>
        </div>
    </div>

    <form method="get" class="filter-card mb-5">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="search-box">
                    <i class="bi bi-search"></i>
                    <input type="text" name="search" value="@ViewBag.CurrentSearch"
                           placeholder="Tìm kiếm sản phẩm...">
                </div>
            </div>
            <div class="col-md-4">
                <select name="categoryId" class="form-select">
                    <option value="0">Tất cả danh mục</option>
                    @foreach (var cat in (List<Lasting.Models.Category>)ViewBag.Categories)
                    {
                        <option value="@cat.Id" selected="@(ViewBag.CurrentCategoryId == cat.Id ? "selected" : null)">
                            @cat.Name
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-filter">
                    <i class="bi bi-funnel me-1"></i> Lọc
                </button>
            </div>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="empty-products">
            <i class="bi bi-search-heart"></i>
            <h4>Không tìm thấy sản phẩm</h4>
            <p class="text-muted">Hãy thử thay đổi tiêu chí tìm kiếm</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var p in Model)
            {
                <div class="col">
                    <div class="product-card">
                        <div class="product-image">
                            <img src="@p.ImageUrl" alt="@p.Name">
                        </div>
                        <div class="product-info">
                            <div class="product-category">@(p.Category?.Name ?? "Không xác định")</div>
                            <h3 class="product-title">@p.Name</h3>
                            <div class="product-brand">@(p.Brand?.Name ?? "Không xác định")</div>
                            <div class="product-price">
                                <span class="current-price">@p.Price.ToString("N0") đ</span>
                                @if (p.OldPrice.HasValue && p.OldPrice > 0)
                                {
                                    <span class="old-price">@p.OldPrice.Value.ToString("N0") đ</span>
                                }
                            </div>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@p.Id"
                               class="btn btn-view-details">
                                <i class="bi bi-eye me-1"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .divider {
        width: 80px;
        height: 4px;
        background: #f04c2f;
        border-radius: 2px;
    }

    .filter-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }

    .search-box {
        position: relative;
    }

        .search-box i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #a0aec0;
        }

        .search-box input {
            width: 100%;
            padding: 12px 20px 12px 45px;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
            transition: all 0.3s ease;
        }

            .search-box input:focus {
                border-color: #f04c2f;
                box-shadow: 0 0 0 3px rgba(240, 76, 47, 0.2);
            }

    .form-select {
        padding: 12px 20px;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
    }

    .btn-filter {
        background: #2d3748;
        color: white;
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-filter:hover {
            background: #1a202c;
            transform: translateY(-2px);
        }

    .empty-products {
        text-align: center;
        padding: 60px 0;
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }

        .empty-products i {
            font-size: 4rem;
            color: #cbd5e0;
            margin-bottom: 20px;
        }

    .product-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        height: 100%;
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.1);
        }

    .product-image {
        height: 240px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f9f9f9;
    }

        .product-image img {
            max-height: 100%;
            max-width: 100%;
            transition: transform 0.5s ease;
        }

    .product-card:hover .product-image img {
        transform: scale(1.05);
    }

    .product-info {
        padding: 20px;
    }

    .product-category {
        color: #f04c2f;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .product-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 5px;
        color: #2d3748;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-brand {
        color: #718096;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .product-price {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 15px;
    }

    .current-price {
        color: #f04c2f;
        font-weight: 700;
        font-size: 1.2rem;
    }

    .old-price {
        text-decoration: line-through;
        color: #a0aec0;
        font-size: 0.9rem;
    }

    .btn-view-details {
        width: 100%;
        background: rgba(240, 76, 47, 0.1);
        color: #f04c2f;
        border: none;
        padding: 10px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-view-details:hover {
            background: #f04c2f;
            color: white;
        }
</style>