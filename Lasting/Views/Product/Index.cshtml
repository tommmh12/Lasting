@model IEnumerable<Lasting.Models.Product>

@{
    ViewData["Title"] = "Sản phẩm";
}

<div class="container my-5">
    <h1 class="mb-4 text-center">🌟 Bộ sưu tập giày</h1>

    <form method="get" class="row mb-4">
        <div class="col-md-6">
            <input type="text"
                   name="search"
                   value="@ViewBag.CurrentSearch"
                   class="form-control"
                   placeholder="Tìm kiếm sản phẩm..." />
        </div>
        <div class="col-md-4">
            <select name="categoryId" class="form-control">
                <option value="0">-- Tất cả danh mục --</option>
                @foreach (var cat in (List<Lasting.Models.Category>)ViewBag.Categories)
                {
                    <option value="@cat.Id" selected="@(ViewBag.CurrentCategoryId == cat.Id ? "selected" : null)">
                        @cat.Name
                    </option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">🔍 Lọc</button>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Không tìm thấy sản phẩm nào...
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var p in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@p.ImageUrl" class="card-img-top" alt="@p.Name" style="height: 240px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@p.Name</h5>
                            <p class="card-text text-muted mb-2">@(p.Brand?.Name ?? "Không xác định")</p>
                            <p class="card-text mt-auto">
                                <span class="fw-bold text-danger">@string.Format("{0:N0}", p.Price) đ</span>
                                @if (p.OldPrice.HasValue && p.OldPrice > 0)
                                {
                                    <span class="text-muted text-decoration-line-through ms-2">@string.Format("{0:N0}", p.OldPrice.Value) đ</span>
                                }
                            </p>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-primary mt-2">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>