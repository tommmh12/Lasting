@model ApplicationUser

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-gradient-primary text-white py-3 rounded-top-4">
            <h4 class="mb-0 font-weight-bold"><i class="fas fa-user-circle me-2"></i>Thông tin cá nhân</h4>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-4 text-center mb-4">
                    <div class="avatar-wrapper">
                        <img src="https://ui-avatars.com/api/?name=@Model.FullName&background=random&size=150&rounded=true"
                             alt="Avatar" class="img-thumbnail rounded-circle shadow-sm" width="150">
                        <div class="mt-3">
                            <button class="btn btn-sm btn-outline-primary">Đổi ảnh</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <dl class="row profile-info">
                        <dt class="col-sm-4 text-muted">Họ tên:</dt>
                        <dd class="col-sm-8 font-weight-bold">@Model.FullName</dd>

                        <dt class="col-sm-4 text-muted">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4 text-muted">Số điện thoại:</dt>
                        <dd class="col-sm-8">@(Model.PhoneNumber ?? "Chưa cập nhật")</dd>

                        <dt class="col-sm-4 text-muted">Ngày tham gia:</dt>
                        <dd class="col-sm-8">@DateTime.Now.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                <a asp-action="Edit" class="btn btn-primary px-4 rounded-pill">
                    <i class="fas fa-edit me-2"></i>Chỉnh sửa thông tin
                </a>
                <a asp-action="ChangePassword" class="btn btn-outline-secondary px-4 rounded-pill">
                    <i class="fas fa-key me-2"></i>Đổi mật khẩu
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }

    .profile-info dd {
        padding-bottom: 12px;
        border-bottom: 1px dashed #eee;
        margin-bottom: 12px;
    }

    .profile-info dt {
        font-weight: 500;
    }

    .card {
        border: none;
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .btn {
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}